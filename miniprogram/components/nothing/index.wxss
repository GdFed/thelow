.nothing .inner{
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  box-shadow:0 0 16rpx 0 rgba(255,255,255,.16) inset;
}
.nothing view{
  width: 100%;
  box-sizing: border-box;
}
.nothing .thing{
  font-size: 30rpx;
  color: #2b2b2b;
  text-align: right;
  padding-right: 48rpx;
  line-height: 60rpx;
}
.nothing .time{
  font-size: 28rpx;
  color: #2b2b2b;
  text-align: right;
  padding-right: 48rpx;
  line-height: 40rpx;
}
.nothing .addr{
  font-size: 28rpx;
  color: #2b2b2b;
  text-align: right;
  padding-right:48rpx;
  line-height: 40rpx;
}
.nothing .line{
  text-align: right;
  color: #666;
  line-height: 40rpx;
}
.nothing .txt{
  font-size: 30rpx;
  color: #2b2b2b;
  /* padding: 0 12rpx; */
  text-align: center;
  line-height: 60rpx;
}