.nothing{
  /* padding: 12rpx; */
  width: 100%;
  box-sizing: border-box;
  position: relative;
  min-height: 480rpx;
  border-bottom: 12rpx solid #eee;
  overflow: hidden;
}
.nothing .bg{
  opacity: .3;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
