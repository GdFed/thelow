.nothing .new {
  font-size: 20rpx;
  line-height: 40rpx;
  position: absolute;
  z-index: 3;
  top: 18rpx;
  width: 116rpx;
  height: 56rpx;
  left: -10rpx;
  color: #fff;
  text-align: center;
  opacity: .8;
}
.nothing .new image{
  width: 100%;
  height: 100%;
}

