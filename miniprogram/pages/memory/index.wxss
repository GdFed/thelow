/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.container{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
  box-sizing: border-box;
}
.item{
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
}
.item .title{
  width: 100%;
  height: 30rpx;
  border-left: 6rpx solid #5ed57f;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 30rpx;
  padding-left: 12rpx;
  color: #2b2b2b;
  box-sizing: border-box;
}
.words .cont, .photos .cont{
  width: 100%;
  min-height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 24rpx;
  box-sizing: border-box;
}
.time .cont, .addr .cont{
  /* border-bottom: 1rpx solid #e9e9e9; */
}
.picker image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: -10%;
  margin-right: 12rpx;
}
.item .cont{
  font-size: 26rpx;
  color: #2b2b2b;
  padding: 24rpx;
}
.cont .photos{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
slider{
  width: 600rpx;
  margin: 0 auto;
}
.txt-have{
  font-size: 26rpx;
  color: #2b2b2b;
}
textarea{
  width: 640rpx;
  height: 360rpx;
  margin: 0 auto;
  padding: 24rpx;
  box-sizing: border-box;
  box-shadow:0 4rpx 8rpx 0 rgba(43,45,46,.16);
  font-size: 26rpx;
  color: #2b2b2b;
}
.item .no-cont{
  font-size: 30rpx;
  line-height: 1.2;
  color: #aaa;
  text-align: center;
}
.img{
  position: relative;
}
.del{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  border-radius: 50%;
}
.picedit{
  display: inline-block;
  font-size: 18rpx;
  color: #ffa07a;
}
.add-pic{
  border: 1px dotted #1296db;
  width: 640rpx;
  margin: 20rpx auto;
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.add-pic image{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}
.tip{
  font-size: 20rpx;
  color: #aaa;
  text-align: center;
}
.control{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-bottom: 24rpx;
}
button{
  border-radius: 8rpx;
  /* width: 120rpx; */
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  box-shadow:0 4rpx 8rpx 0 rgba(43,45,46,.16);
  margin: 10rpx;
}
.edit-all{
  background: lightblue;
  color: #2b2b2b;
}
.save{
  background: lightcoral;
  color: #2b2b2b;
}
.shareModle{
  position: fixed;
  z-index: 999;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0,0,0, .2);
  display: flex;
  justify-content: center;
  align-items: center;
}
.shareModle .inner{
  margin-top: 200rpx;
  width: 400rpx;
  height: 120rpx;
  background: #f6f6f6;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.shareModle .inner button{
  width: 64rpx;
  height: 64rpx;
  border: none !important;
}
.shareModle .inner button image{
  width: 64rpx;
  height: 64rpx;
}
@keyframes rotate
{
from {transform: rotate(0deg);}
to {transform: rotate(360deg);}
}
@keyframes translate
{
from {transform: translateX(0);}
25% {transform: translateX(-40%);}
50% {transform: translateX(0%);}
75% {transform: translateX(40%);}
to {transform: translateX(0);}
}


